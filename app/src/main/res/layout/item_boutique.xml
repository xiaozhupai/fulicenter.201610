<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_boutique_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >
   <ImageView
       android:id="@+id/ivBoutiqueImg"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:scaleType="fitXY"
       android:src="@drawable/nopic" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="top"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:layout_toRightOf="@id/ivBoutiqueImg"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tvBoutiqueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_title"
            android:textSize="16sp"
            android:ellipsize="end"
            android:text="aug 28 201"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tvBoutiqueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_name"
            android:textSize="16sp"
            android:ellipsize="end"
            android:text="dayi"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tvBoutiqueDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2015 report"
            android:textSize="18sp"
            android:textColor="@color/gray_normal"
            android:layout_marginTop="10dp"
            android:minLines="2"
            android:ellipsize="end"
            />
    </LinearLayout>
</RelativeLayout>
