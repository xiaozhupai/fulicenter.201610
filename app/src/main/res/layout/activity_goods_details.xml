<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_goods_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/good_detail_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/layout_title"
        android:background="@color/main_orange"
        >
        <include layout="@layout/common_title"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/iv_good_share"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/selector_share_bg"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/iv_good_collect"
                android:padding="5dp"
                android:layout_toLeftOf="@id/iv_good_share"
                android:src="@mipmap/bg_collect_in"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/iv_good_collect"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_good_cart"
                    android:src="@mipmap/bg_cart_selected"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_cart_count"
                    android:textColor="#f00"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    />
            </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_banner"
        android:padding="25dp"
        android:background="@color/good_detail_bg_white"
        android:layout_below="@id/layout_title"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_good_name_english"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_good_name"
            android:layout_below="@id/tv_good_name_english"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_good_price_shop"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/good_detail_currency_price"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_good_price_current"
            android:layout_margin="5dp"
            android:layout_below="@id/tv_good_price_shop"
            android:layout_alignParentRight="true"
            android:textColor="@color/good_detail_currency_price"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:id="@+id/layout_image"
            android:layout_marginTop="50dp"
            android:layout_below="@id/tv_good_price_current"
            >
            <cn.ucai.fulicenter.view.SlideAutoLoopView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/salv"
                android:background="@color/good_detail_bg_white"
                />
            <cn.ucai.fulicenter.view.FlowIndicator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/indicator"
                app:count="4"
                app:focus="0"
                app:focus_color="@color/good_detaul_flow_indicator_focus"
                app:normal_color="#a1d1d1d1"
                app:r="5dp"
                app:space="3dp"
                />
        </RelativeLayout>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wv_good_brief"
            android:layout_below="@id/layout_image"
            android:layout_margin="10dp"
            android:background="@color/good_detail_bg_white"
            />
    </RelativeLayout>
</RelativeLayout>
